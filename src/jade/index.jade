include mixins

doctype html
html(ng-app='mainApp')
	head
		meta(charset='UTF-8')
		meta(name='description', content='Some have suggested that this game is similar to the card game "Splendor" by Space Cowboys.')
		meta(name='author', content='Moritz Company')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
		meta(name='apple-mobile-web-app-capable' content='yes')
		meta(name='apple-touch-fullscreen' content='yes')
		title Splendid Gems
		link(rel='shortcut icon', href='favicon.ico')
		link(rel='stylesheet', href='inc/main.css')
		script(src='inc/angular.js')
	body(ng-cloak, ng-controller='MainCtrl')
		.container(ng-class='gameStatus')
			header.hide
				h1 Splendid Gems
			.jumbotron
				h2.text-center Welcome to Splendid Gems!
				h4 Active Player: {{currentPlayer.name}}
				.notices
			.pre-game
				input(ng-model='ff.newPlayerName')
				button.btn.btn-info(ng-click='addNewPlayer()') Add New Player
				.clearfix
				button.btn.btn-primary.facebook-login(ng-click='fbLogin()') Login with Facebook
				h4 Active Player: {{currentPlayer.name}}
				ul
					li(ng-repeat='player in allPlayers')
						h5(ng-click='changeCurrentPlayer(player)') Name: {{player.name}}
				button.btn.btn-success(ng-click='startGame()') Start Game
				button.btn.btn-warning(ng-click='quickStart()') Quick Start
			.game-started.row
				+col(6)
					h4 All Players
					ul
						li(ng-repeat='player in allPlayers')
							h5(ng-click='changeCurrentPlayer(player)') Name: {{player.name}}
							h6(ng-repeat='chip in player.chips') Gem: {{chip.gem}}
				+col(6)
					button(ng-repeat='gem in allGems' class='gem btn btn-{{gem.btnClass}}' ng-click='addChip(gem.name)' ng-disabled='!gemAvailable(gem.name)') {{gem.display}}
					h4 Current Selection
					ul
						li(ng-repeat='gem in currentSelection track by $index')
							h5 Gem: {{gem}}
					button.btn.btn-success(ng-click='collectChips()') Collect Gems
					button.btn.btn-info(ng-click='clearSelection()') Clear Selection
		script(src='inc/lib.js')
		script(src='inc/main.js')
